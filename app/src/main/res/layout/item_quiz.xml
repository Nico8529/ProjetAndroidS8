<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:background="@drawable/quiz_background"
              android:layout_margin="8dp"
              android:elevation="4dp"
              android:layout_gravity="center">

    <!-- Nom du quiz -->
    <TextView
            android:id="@+id/quizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz Title"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    <!-- Description du quiz -->
    <TextView
            android:id="@+id/quizDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description du quiz"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end"/>

    <!-- Nombre de questions -->
    <TextView
            android:id="@+id/nombreQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Questions: 0"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp"/>

    <!-- Score Max -->
    <TextView
            android:id="@+id/quizscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Max: 0"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp"/>

    <!-- IcÃ´ne Premium (visible seulement si applicable) -->
    <ImageView
            android:id="@+id/premiumicon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_premium"
            android:visibility="gone"
            android:layout_gravity="end"/>

</LinearLayout>
