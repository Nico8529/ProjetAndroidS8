<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/logo_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@android:mipmap/sym_def_app_icon"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/app_logo" />

    <TextView
            android:id="@+id/title_LMenuDuJeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/logo_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/btnContinue_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/title_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    <Button
            android:id="@+id/btnNewGame_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nouvelle partie"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/btnContinue_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    <Button
            android:id="@+id/btnStat_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Statistique"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/btnNewGame_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    <Button
            android:id="@+id/btnSave_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sauvegarde"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/btnStat_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    <Button
            android:id="@+id/btnParam_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Parametre"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/btnSave_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    <Button
            android:id="@+id/btnExit_LMenuDuJeu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quitter"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/btnParam_LMenuDuJeu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.AppCompat.Button.Colored" />

    <TextView
            android:id="@+id/version_LMenuDuJeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:text="@string/version_app" />

</androidx.constraintlayout.widget.ConstraintLayout>
