<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MenuDuJeu">

    <!-- IcÃ´ne de profil ronde -->
    <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_baseline_groups_24"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:contentDescription="Profil"
            android:elevation="6dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo 3D centrÃ© -->
    <ImageView
            android:id="@+id/logoImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/logo"
            android:contentDescription="Logo du jeu"
            app:layout_constraintTop_toBottomOf="@id/profileIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Titre stylisÃ© -->
    <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® QUIZ MASTER"
            android:textSize="26sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <!-- Zone de boutons -->
    <LinearLayout
            android:id="@+id/buttonLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="36dp"
            app:layout_constraintTop_toBottomOf="@id/appTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:id="@+id/btnContinue_LMenuDuJeu"
                style="@style/Widget.Button.Modern"
                android:text="Continuer"/>

        <Button
                android:id="@+id/btnNewGame_LMenuDuJeu"
                style="@style/Widget.Button.Modern"
                android:text="Nouvelle Partie"
                android:layout_marginTop="12dp"/>

        <Button
                android:id="@+id/btnStat_LMenuDuJeu"
                style="@style/Widget.Button.Modern"
                android:text="Statistiques"
                android:layout_marginTop="12dp"/>

        <Button
                android:id="@+id/btnSave_LMenuDuJeu"
                style="@style/Widget.Button.Modern"
                android:text="Sauvegarde"
                android:layout_marginTop="12dp"/>

        <Button
                android:id="@+id/btnParam_LMenuDuJeu"
                style="@style/Widget.Button.Modern"
                android:text="ParamÃ¨tres"
                android:layout_marginTop="12dp"/>

        <Button
                android:id="@+id/btnExit_LMenuDuJeu"
                style="@style/Widget.Button.Modern"
                android:text="Quitter"
                android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- Version en bas -->
    <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
