<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/white"
        tools:context=".SelectionMode2">

    <!-- Bouton retour -->
    <ImageButton
            android:id="@+id/btnBack_LSelection_mode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp" />


    <!-- Titre -->
    <TextView
            android:id="@+id/title_Lselection_mode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sélection du mode de jeu"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack_LSelection_mode2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

    <!-- Affichage du titre et du score du quiz -->
    <TextView
            android:id="@+id/selectedQuizTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Titre du quiz : "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/title_Lselection_mode2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    <TextView
            android:id="@+id/selectedQuizScoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Score : "
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/selectedQuizTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Mode boutons -->
    <Button
            android:id="@+id/btnNormal_LSelection_mode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mode Normal"
            android:drawableStart="@drawable/ic_baseline_check_circle_24"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/selectedQuizScoreText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    <Button
            android:id="@+id/btn3Best_LSelection_mode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mode 3 meilleurs sur 4"
            android:drawableStart="@drawable/ic_baseline_groups_24"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnNormal_LSelection_mode2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/btnFast_LSelection_mode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mode Le plus rapide"
            android:drawableStart="@drawable/ic_baseline_flash_on_24"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn3Best_LSelection_mode2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/btnDiffPoint_LSelection_mode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mode Répartition régressive"
            android:drawableStart="@drawable/ic_baseline_leaderboard_24"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnFast_LSelection_mode2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/btnMontre_LSelection_mode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mode Contre la montre"
            android:drawableStart="@drawable/ic_baseline_timer_24"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnDiffPoint_LSelection_mode2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <!-- Version -->
    <TextView
            android:id="@+id/version_LSelectMode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_app"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
