<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF4081"/> <!-- Couleur lorsque le bouton est pressé -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#6200EE"/> <!-- Couleur par défaut du bouton -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
